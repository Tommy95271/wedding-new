<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>JoJo Wedding Dress Rent - @ViewBag.Title</title>
    <!-- Site Icons -->
    <link rel="shortcut icon" href="~/img/Icon.png">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>

<body>
    <!-- LOADER -->
    <div id="preloader"></div>
    <!-- END LOADER -->
    <header class="header header_style_01 bg-info">
        <nav class="navbar header-nav navbar-expand-lg bg-info">
            <div class="container">
                @Html.ActionLink("JoJo婚紗租界管理介面", "Index", "Admin", new { area = "Backend" }, new { @class = "navbar-brand" })
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarApp">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarApp">
                    <ul class="navbar-nav">
                        @if(Session["Member"] == null)
                        {
                            <li class="adminddl">
                                @Html.ActionLink("登入", "Login", "Login", new { area = "Backend" }, new { @class = "nav-link" })
                            </li>
                            <li class="adminddl">
                                @Html.ActionLink("前台觀看", "Index", "Home", new { area = "Frontend" }, new { @class = "nav-link" })
                            </li>
                        }
                        else
                        {
                            <li class="dropdown adminddl">
                                @Html.ActionLink("上傳照片", "Create", "Admin", new { area = "Backend" }, new { @class = "nav-link" })
                            </li>
                            <li class="adminddl">
                                @Html.ActionLink("管理照片", "Manage", "Manage", new { area = "Backend" }, new { @class = "nav-link" })
                            </li>
                            <li class="adminddl">
                                @Html.ActionLink("訂單管理", "Order", "Manage", new { area = "Backend" }, new { @class = "nav-link", target = "_blank" })
                            </li>
                            <li class="adminddl">
                                @Html.ActionLink("訂單細節", "Order_Detail", "Manage", new { area = "Backend" }, new { @class = "nav-link", target = "_blank" })
                            </li>
                            <li class="adminddl">
                                @Html.ActionLink("前台觀看", "Index", "Home", new { area = "Frontend" }, new { @class = "nav-link" })
                            </li>
                            <li class="adminddl">
                                @Html.ActionLink("登出", "Logout", "Login", new { area = "Backend" }, new { @class = "nav-link" })
                            </li>
                        }
                    </ul>
                    <div class="text-warning">@Session["WelCome"]</div>
                </div>
            </div>
        </nav>
    </header>
    <!-- Top -->
    <div class="extraMargin"></div>
    <div class="container body-content container-fluid">
        <section id="gotop"></section>
        @RenderBody()
        <div class="wb py-5">
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - JoJo婚紗租借管理</p>
        </footer>
    </div>
    <!--Back to top-->
    <a href="#gotop" data-scroll class="dmtop"><i><img src="~/img/UpArrow.png"></i></a>
    @Scripts.Render("~/bundles/js")
</body>
</html>
