@model IPagedList<prjWedding.Areas.Backend.Models.tPhoto>
@{
    ViewBag.Title = "Manage";
}


<h2>管理照片</h2>

<div class="row">
    @foreach(var item in Model)
    {
        if(item.FolderName == "IF")
        {
            <div class="col-lg-6 aligncenter text-center IFDisplay my-5">
                @{
                    <img src="@Url.Content(String.Format("~/Picture/{0}/{1}", item.FolderName, item.Image))" class="" />
                    <br>
                    @Html.DisplayFor(modelItem => item.Type)
                    <br />
                    @Html.DisplayFor(modelItem => item.Image)
                    <br />
                    @Html.DisplayFor(modelItem => item.Date)
                    <br />
                    <div class="text-muted h6 text-left">@Html.DisplayFor(modelItem => item.Description)</div>
                    @Html.ActionLink("修改", "Edit", "Admin", new { mId = item.Id }, new { @class = "btn btn-primary mx-3" })
                    @Html.ActionLink("刪除", "Delete", "Admin", new { mId = item.Id }, new { @class = "btn btn-primary mx-3", onclick = "return confirm('確定要刪除？')" })
                }
            </div>
        }
    }
    <div class="extraSpace"></div>
    @foreach(var item in Model)
    {
        if(item.FolderName == "Photo")
        {
            <div class="col-lg-4 aligncenter text-center PhotoDisplay mb-5">
                @{
                    <img src="@Url.Content(String.Format("~/Picture/{0}/{1}", item.FolderName, item.Image))" />
                    <br />
                    @Html.DisplayFor(modelItem => item.Type)
                    <br />
                    @Html.DisplayFor(modelItem => item.Image)
                    <br />
                    @Html.DisplayFor(modelItem => item.Date)
                    <br />
                    <div class="text-muted h6 text-left">@Html.DisplayFor(modelItem => item.Description)</div>
                    @Html.ActionLink("修改", "Edit", "Admin", new { mId = item.Id }, new { @class = "btn btn-primary m-3" })
                    @Html.ActionLink("刪除", "Delete", "Admin", new { mId = item.Id }, new { @class = "btn btn-primary m-3", onclick = "return confirm('確定要刪除？')" })
                }
            </div>
        }
    }
    @foreach(var item in Model)
    {
        if(item.FolderName == "WD")
        {
            <div class="col-lg-4 aligncenter text-center WDDisplay my-3">
                @{
                    <img src="@Url.Content(String.Format("~/Picture/{0}/{1}", item.FolderName, item.Image))" />
                    <br />
                    @Html.DisplayFor(modelItem => item.Type)
                    <br />
                    @Html.DisplayFor(modelItem => item.Image)
                    <br />
                    @Html.DisplayFor(modelItem => item.Date)
                    <br />
                    <div class="text-muted h6 text-left">@Html.DisplayFor(modelItem => item.Description)</div>
                    @Html.ActionLink("修改", "Edit", "Admin", new { mId = item.Id }, new { @class = "btn btn-primary m-3" })
                    @Html.ActionLink("刪除", "Delete", "Admin", new { mId = item.Id }, new { @class = "btn btn-primary m-3", onclick = "return confirm('確定要刪除？')" })
                }
            </div>
        }
    }
</div>
@Html.PagedListPager(Model, page => Url.Action("Manage", new { page}))